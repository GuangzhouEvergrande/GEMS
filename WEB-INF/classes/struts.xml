<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<constant name="struts.devMode" value="false" />
	<constant name="struts.i18n.encoding" value="UTF-8" />
	<package name="user" extends="struts-default,json-default">
		<action name="login1" class="com.action.SigninAction" method="signin">
			<result name="success" type="json">
				<param name="contentType">text/html</param>
				<param name="root">map</param>
			</result>
			<result name="input" type="json">
			<param name="contentType">text/html</param>
				<param name="root">map</param>
			</result>
		</action>

		<action name="signup" class="com.action.SigninAction" method="signup">
			<result name="success" type="json">
				<param name="contentType">text/html</param>
				<param name="root">map</param>
			</result>
			<result name="input" type="json">
			<param name="contentType">text/html</param>
				<param name="root">map</param>
			</result>
		</action>
		
		<action name="send" class="com.action.SendSimpleEmail" method="sendEmail">
		    <result name="success" type="json">
		        <param name="contentType">text/html</param>
		        <param name="root">map</param>
		    </result>
		</action>
	</package>
</struts>    
